@model WebApplication_EvotesNet_6.Data.Voters

@{
    ViewData["Title"] = "Create";
}

<h1>Voting Portal</h1>
<p> Please enter your voters ID# and select the candidate's name from the list before selecting the submit option</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="VotersIdNumber" class="control-label"></label>
                <input asp-for="VotersIdNumber" class="form-control" />
                <span asp-validation-for="VotersIdNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CandidatesId" class="control-label"></label>
                <select asp-for="CandidatesId" class ="form-select" asp-items="ViewBag.CandidatesId"></select>
            </div>
            <br />
            <div class="form-group">
                <a class="btn btn-secondary" asp-controller="Home" asp-action="Vote">Back Summary</a> 
                <input type="submit" value="Submit Vote" class="btn btn-success vote" />
            </div>
        </form>
    </div>
</div>
